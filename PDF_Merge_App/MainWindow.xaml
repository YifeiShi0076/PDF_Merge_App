<Window x:Class="PDF_Merge_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_Merge_App"
        mc:Ignorable="d"
        Title="PDF合并工具" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部提示 -->
        <TextBlock Grid.Row="0" Text="请拖入需要合并的 PDF/JPG/JPEG/PNG/BMP/GIF 文件" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- 拖放区域 -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Background="#FFF"
                AllowDrop="True" DragOver="DragDropArea_DragOver" Drop="DragDropArea_Drop">
            <TextBlock Text="将文件拖放到此处" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        </Border>

        <!-- 底部区域 -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <!-- 文件列表 -->
            <ListView x:Name="FileListBox" Height="100" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <!-- 文件名列 -->
                        <GridViewColumn Header="文件名" Width="400" DisplayMemberBinding="{Binding FileName}" />
                        <!-- 删除按钮列 -->
                        <GridViewColumn Header="操作" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="删除" Width="60" Height="25" 
                                Click="DeleteButton_Click" Tag="{Binding FilePath}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- 输出路径 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="OutputPathTextBox" Width="400" Margin="0,0,10,0"/>
                <Button Content="浏览" Width="80" Click="BrowseButton_Click"/>
            </StackPanel>

            <!-- 合并按钮 -->
            <Button Content="合并文件" Height="30" HorizontalAlignment="Right" Width="100" Click="MergeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
